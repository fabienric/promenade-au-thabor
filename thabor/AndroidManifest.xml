<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	android:versionCode="3" android:versionName="0.3" package="com.fortydegree.ra">

	<uses-sdk android:minSdkVersion="3" android:targetSdkVersion="13"/>
	<supports-screens android:largeScreens="true"/>
	<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.CAMERA" />
	<uses-permission android:name="android.permission.WAKE_LOCK" />

	<application android:allowBackup="true" android:icon="@drawable/leaf"
		android:label="Promenade au Thabor">

		<uses-library android:name="com.google.android.maps" />

		<activity android:label="Promenade au Thabor" android:name=".RAView"
			android:screenOrientation="landscape" android:launchMode="singleTask">

			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>

		<activity android:name="InfoActivity"
			android:screenOrientation="landscape" android:launchMode="singleTop">
		</activity>
	</application>

</manifest> 
